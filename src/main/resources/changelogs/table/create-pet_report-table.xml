<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-pet_reports-table.2" author="Evgeniy Zinchenko">
        <preConditions>
            <not>
                <tableExists tableName="pet_report"/>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="pet_report">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="owner" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="DATETIME(6)">
                <constraints nullable="true"/>
            </column>
            <column name="photo" type="bytea">
                <constraints nullable="true"/>
            </column>
            <column name="text" type="VARCHAR(2000)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="user">
            <column name="userId" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="pet_report" indexName="IDX_PET_REPORT_DATE_TIME">
            <column name="date_time"></column>
        </createIndex>

    </changeSet>

</databaseChangeLog>