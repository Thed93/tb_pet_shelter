<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-pet_reports-table.2" author="Evgeniy Zinchenko">
        <preConditions>
            <not>
                <tableExists tableName="pet_report"/>
            </not>

        </preConditions>

        <createTable tableName="pet_report">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user3" references="&quot;user&quot;(&quot;user_id&quot;)"/>
            </column>
            <column name="date_time" type="DATETIME(6)">
                <constraints nullable="true"/>
            </column>
            <column name="photo" type="VARBINARY">
                <constraints nullable="true"/>
            </column>
            <column name="diet" type="VARCHAR(2000)">
                <constraints nullable="true"/>
            </column>
            <column name="well_being" type="VARCHAR(2000)">
                <constraints nullable="true"/>
            </column>
            <column name="change_in_behavior" type="VARCHAR(2000)">
                <constraints nullable="true"/>
            </column>
            <column name="report_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="pet_report" indexName="IDX_PET_REPORT_DATE_TIME">
            <column name="date_time"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>