<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-user" author="Evgeniy Zinchenko">
        <preConditions>
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="user">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="current_chosen_shelter" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="has_chosen_shelter" type="Boolean">
                <constraints nullable="true"/>
            </column>
            <column name="bot_state" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>